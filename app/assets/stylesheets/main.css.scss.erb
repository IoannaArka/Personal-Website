table.work {
  margin-top: 4%;
  width: 100%;
  border-collapse: separate;
  border-spacing: 1em;
}

td {
	vertical-align: baseline;
  width: 40%;
  border-bottom: #b0c4de 1px dotted;
}
.cvleft {
  text-align: right;
	width: 20%;
  padding:  2%;
}
.cvright {
  line-height: 2em;
  text-align: right;
  padding: 2%;
  border-left: #b0c4de 1px dotted;
}
.bottom {
  border-bottom: none;
}

table li { 
  list-style-type: circle;
  list-style-position: inside;
  
}

ul.short { 
  width: 80%;
  padding-left: 15%;
  text-align: justify;
}
ul.short li {
  list-style-position: outside;
	line-height: 2em;
}

div img {
  vertical-align: top;
  float: right;
  border-radius: 5%;
  margin: 2%;
	width: 29%;
}
.img-good {
	width: 30%;
  float: right;
  margin: 0 5%;
}
.fullwidth {
  float: none;
  margin: auto;
  width: 100%;
}

div 
.short {
  max-width: 500px;
  line-height: 1.5em;
	margin: auto;
}
.box-i {
	max-width: 700px;
	margin-left: auto;
	margin-right: auto;
	margin-top: -70px;
	margin-bottom: -50px;
	background: rgba(255,255,255,0.4);
	padding: 70px 10px 20% 10px;
}
.box-left, .box-right{
  border: dotted #b0c4de 2px;
	max-width: 70%;
  margin: 2% 5% 2%;
  padding: 1% 3% 1%;
  border-radius: 5px;
  background-color: white;
  position: relative;
}
.box-left{
  left: 0;
}
.box-right{
	left: 10%;
}
.contain {
	position: relative;
}
h3{
  padding: 2%;
  background: white;
}

h3 {
  line-height: 2em;
}

body {
	padding-top: 70px; 
  padding-bottom: 60px;
}

.right {
	padding-top: 5px;
	text-align: right;
}

div p {
  line-height: 160%;
	padding-top: 10px;
	text-align: justify;
}


[class^="famfamfam-flag"] {
  display: inline-block;
  width: 16px;
  height: 11px;
  line-height: 11px;
  /* vertical-align: text-top; */
  background-image: url("<%= asset_path "famfamfam-flags.png" %>");
  background-position: 0 0;
  background-repeat: no-repeat;
}
